<div class="form-group">
  <%= label @form, :name, "Unique edition's name", class: "control-label" %>:
  <%= text_input @form, :name, class: "form-control" %>
  <%= if message = @form.errors[:name] do %>
    <span class="help-block"><%= message %></span>
  <% end %>
</div>

<div class="form-group">
  <%= label @form, :real_name, "Real full edition name", class: "control-label" %>:
  <%= text_input @form, :real_name, class: "form-control" %>
  <%= if message = @form.errors[:real_name] do %>
    <span class="help-block"><%= message %></span>
  <% end %>
</div>

